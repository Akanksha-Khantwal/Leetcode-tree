class Solution {
  public:
     void kth(Node*root,int &k,int& ans){
        if(!root)
        return;
        kth(root->right,k,ans);
        k--;
        if(k==0)
        ans=root->data;
        if(k<=0)
        return;
        kth(root->left,k,ans);
    }
    int kthLargest(Node* root, int k) {
        int ans;
        kth(root,k,ans);
        return ans;
        
    }
};
